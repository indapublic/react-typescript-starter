{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"jsx": "react",
		"strict": true,
		"strictNullChecks": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"compileOnSave": false,
	"include": ["src"],
	"exclude": ["node_modules"]
}
